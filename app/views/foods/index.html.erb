<h1>Listing foods</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Score</th>
      <th>Convenience store</th>
      <th>Name</th>
      <th>Tips</th>
      <th>Protein</th>
      <th>Vegetable</th>
      <th>Lipid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.group %></td>
        <td><%= food.score %></td>
        <td><%= food.convenience_store %></td>
        <td><%= food.name %></td>
        <td><%= food.tips %></td>
        <td><%= food.protein %></td>
        <td><%= food.vegetable %></td>
        <td><%= food.lipid %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

