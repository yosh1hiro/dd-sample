<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4 well well-sm">
      <legend><a href="/"><i class="glyphicon glyphicon-globe"></i></a> ユーザー登録!</legend>
      <div class="row">
        <div class="col-xs-6 col-md-6">

          
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :gender, "性別" %>
    <%= f.select :gender, {"男性" => 0, "女性" => 1} %>
  </div>
  <div class="field">
    <%= f.label :birthday, "誕生日" %>
    <%= f.date_field :birthday, value: Time.zone.local(1980, 1, 1) %>
  </div>
  <div class="field">
    <%= f.label :height, "身長(cm)" %>
    <%= f.number_field :height, in: 145..200, step: 0.5, value: 170 %>
  </div>
  <div class="field">
    <%= f.label :initial_weight, "体重(kg)" %>
    <%= f.number_field :initial_weight, in: 48..110, step: 0.5, value: 65 %>
  </div>
  <div class="field">
    <%= f.label :target_weight, "目標体重(kg)" %>
    <%= f.number_field :target_weight, in: 45..90, value: 65 %>
  </div>
  <div class="field">
    <%= f.label :weight_at_age_twenty, "20歳時の体重(kg)" %>
    <%= f.number_field :weight_at_age_twenty, in: 48..110, value: 65 %>
  </div>
  <div class="field">
    <%= f.label :max_weight, "過去最高体重(kg)" %>
    <%= f.number_field :max_weight, in: 48..110, value: 65 %>
  </div>
  <div class="field">
    <%= f.label :age_of_max_weight, "最高体重時の年齢" %>
    <%= f.number_field :age_of_max_weight, in: 16..60, value: 30 %>
  </div>
  <div class="field">
    <%= f.label :reason, "ダイエットをしたい理由はなんですか" %>
    <%= f.text_field :reason, placeholder: "できるだけ具体的に記入してください" %>
  </div>
  <div class="field">
    <%= f.label :how_much_lose_weight, "1ヶ月で何キロ痩せたいですか" %>
    <%= f.number_field :how_much_lose_weight, in: 1..9 %>
  </div>
  <div class="field">
    <%= f.label :intensity_of_losing, "希望するダイエットの強度を選んでください" %>
    <%= f.select :intensity_of_losing, {"美容的なダイエット" => 0, "健康的なダイエット" => 1, "出来る限り多く痩せたい" => 2} %>
  </div>


  <div class="field">
    <%= f.label :sleep_time, "就寝時間" %>
    <%= f.number_field :sleep_time %>
  </div>
  <div class="field">
    <%= f.label :wake_time, "起床時間" %>
    <%= f.number_field :wake_time %>
  </div>
  <div class="field">
    <%= f.label :sleep_comment, "睡眠に問題はありますか" %>
    <%= f.text_field :sleep_comment %>
  </div>
  <div class="field">
    <%= f.label :alcohole, "お酒は飲みますか。種類とおおよその量をお答え下さい" %>
    <%= f.text_field :alcohole %>
  </div>
  <div class="field">
    <%= f.label :how_much_alcohole, "どのくらい飲みますか(杯/日)" %>
    <%= f.range_field :how_much_alcohole, in: 0..10 %>
  </div>
  <div class="field">
    <%= f.label :frequency_in_drink, "週に何日、お酒を飲みますか" %>
    <%= f.range_field :frequency_in_drink, in: 0..7 %>
  </div>
  <div class="field">
    <%= f.label :exercising_custom, "運動習慣はありますか？運動の種類と頻度をお答え下さい" %>
    <%= f.text_field :exercising_custom, placeholder: "1時間のランニングを週に2回" %>
  </div>
  <div class="field">
    <%= f.label :club_activity, "学生時代は運動していましたか" %>
    <%= f.text_field :club_activity %>
  </div>
  <div class="field">
    <%= f.label :active_of_work, "仕事での活動量を下記からお選びください" %>
    <%= f.select :active_of_work, {"軽作業(デスクワーク、家事など)" => "0", "普通の作業(立ち仕事など)" => "1", "重作業(運搬、力仕事など)" => "2"} %>
  </div>



  <h3>食習慣について下記よりお選びください</h3>
  <div class="field">
    <%= f.label :breakfast_custom, "朝食について" %>
    <%= f.select :breakfast_custom, {"食べない" => 0, "自炊または家族が作る" => 1, "インスタントや中食や外食が多い" => 2, "不規則" => 3} %>
  </div>
  <div class="field">
    <%= f.label :breakfast_time, "朝食は何時頃に食べることが多いですか" %>
    <%= f.time_field :breakfast_time %>
  </div>
  <div class="field">
    <%= f.label :breakfast_staple, "主に何を食べることが多いですか" %>
    <%= f.text_field :breakfast_staple %>
  </div>
  <div class="field">
    <%= f.label :lunch_custom, "昼食について" %>
    <%= f.select :lunch_custom, {"食べない" => 0, "自炊または家族が作る" => 1, "インスタントや中食や外食が多い" => 2, "不規則" => 3} %>
  </div>
  <div class="field">
    <%= f.label :lunch_time, "昼食は何時頃に食べることが多いですか" %>
    <%= f.time_field :lunch_time %>
  </div>
  <div class="field">
    <%= f.label :lunch_staple, "主に何を食べることが多いですか" %>
    <%= f.text_field :lunch_staple %>
  </div>
  <div class="field">
    <%= f.label :dinner_custom, "夕食について" %>
    <%= f.select :dinner_custom, {"食べない" => 0, "自炊または家族が作る" => 1, "インスタントや中食や外食が多い" => 2, "不規則" => 3} %>
  </div>
  <div class="field">
    <%= f.label :dinner_time, "夕食は何時頃に食べることが多いですか" %>
    <%= f.time_field :dinner_time %>
  </div>
  <div class="field">
    <%= f.label :dinner_staple, "主に何を食べることが多いですか" %>
    <%= f.text_field :dinner_staple %>
  </div>
  <div class="field">
    <%= f.label :between_meal, "間食を食べる習慣はありますか" %>
    <%= f.select :between_meal, {"食べない" => 0, "毎日食べる" => 1, "週に4回以上" => 2, "週に3回以下" => 3} %>
  </div>
  <div class="field">
    <%= f.label :between_time, "間食は何時頃に食べることが多いですか" %>
    <%= f.time_field :between_time %>
  </div>
  <div class="field">
    <%= f.label :between_food, "間食は何をどれくらい食べますか" %>
    <%= f.text_field :between_food, placeholder: "例) チョコレートを50gとオレンジジュースを1Lほど" %>
  </div>
  <div class="field">
    <%= f.label :midnight_meal, "夜食を食べる習慣はありますか" %>
    <%= f.select :midnight_meal, {"食べない" => 0, "毎日食べる" => 1, "週に4回以上" => 2, "週に3回以下" => 3} %>
  </div>
  <div class="field">
    <%= f.label :midnight_time, "夜食は何時頃に食べることが多いですか" %>
    <%= f.time_field :midnight_time  %>
  </div>
  <div class="field">
    <%= f.label :midnight_food, "夜食は何をどれくらい食べますか" %>
    <%= f.text_field :midnight_food, placeholder: "例) 豚骨ラーメンを1杯" %>
  </div>
  <div class="field">
    <%= f.label :illness, "現在、持病や過去に診断された病気はありますか" %>
    <%= f.text_field :illness, placeholder: "高血圧と糖尿病" %>
  </div>
  <div class="field">
    <%= f.label :medicine, "現在、常用している薬やサプリメントはありますか" %>
    <%= f.text_field :medicine, placeholder: "常用していない場合は「無し」とご記入下さい" %>
  </div>
  <div class="field">
    <%= f.label :allergy, "薬や食品でアレルギーはありますか" %>
    <%= f.text_field :allergy, placeholder: "アレルギーがない場合は「無し」とご記入下さい" %>
  </div>
  <div class="field">
    <%= f.label :stress, "現在感じているストレスはありますか" %>
    <%= f.text_field :stress, placeholder: "例) 不眠で強いストレスがある。職場の人間関係で弱いストレスがある。" %>
  </div>
  <div class="field">
    <%= f.label :smoking_custom, "喫煙習慣はありますか" %>
    <%= f.select :smoking_custom, {"無し" => 0, "有り" => 1, "禁煙中" => 2} %>
  </div>
  <div class="field">
    <%= f.label :smoking_condition, "喫煙者は1日当たりの本数と喫煙開始年齢を、禁煙者は禁煙期間をお答えください。" %>
    <%= f.text_field :smoking_condition, placeholder: "例)　22歳から1日10本程度" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
        </div>
      </div>
    </div>
  </div>
</div>
