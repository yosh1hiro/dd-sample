<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Password digest</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Occupation</th>
      <th>Purpose</th>
      <th>Height</th>
      <th>Initial weight</th>
      <th>Target weight</th>
      <th>Current weight</th>
      <th>Loss rate</th>
      <th>Current bmi</th>
      <th>Ticket count</th>
      <th>Target disease</th>
      <th>Birthday</th>
      <th>Auto login token</th>
      <th>Initial bmi</th>
      <th>Pro edition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.email %></td>
        <td><%= user.gender %></td>
        <td><%= user.occupation %></td>
        <td><%= user.purpose %></td>
        <td><%= user.height %></td>
        <td><%= user.initial_weight %></td>
        <td><%= user.target_weight %></td>
        <td><%= user.current_weight %></td>
        <td><%= user.loss_rate %></td>
        <td><%= user.current_bmi %></td>
        <td><%= user.ticket_count %></td>
        <td><%= user.target_disease %></td>
        <td><%= user.birthday %></td>
        <td><%= user.auto_login_token %></td>
        <td><%= user.initial_bmi %></td>
        <td><%= user.pro_edition %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

