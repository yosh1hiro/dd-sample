<h1>Listing achievements</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Challenge</th>
      <th>Level</th>
      <th>Star</th>
      <th>Year</th>
      <th>Month</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @achievements.each do |achievement| %>
      <tr>
        <td><%= achievement.user_id %></td>
        <td><%= achievement.challenge_id %></td>
        <td><%= achievement.level_id %></td>
        <td><%= achievement.star %></td>
        <td><%= achievement.year %></td>
        <td><%= achievement.month %></td>
        <td><%= achievement.date %></td>
        <td><%= achievement.time %></td>
        <td><%= link_to 'Show', achievement %></td>
        <td><%= link_to 'Edit', edit_achievement_path(achievement) %></td>
        <td><%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Achievement', new_achievement_path %>
