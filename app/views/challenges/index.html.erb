<h1>Listing challenges</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Caption</th>
      <th>Description</th>
      <th>Description 1</th>
      <th>Description 2</th>
      <th>Description 3</th>
      <th>Description 4</th>
      <th>Comment</th>
      <th>Category</th>
      <th>Param 0</th>
      <th>Param 1</th>
      <th>Param 2</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.group %></td>
        <td><%= challenge.caption %></td>
        <td><%= challenge.description %></td>
        <td><%= challenge.description_1 %></td>
        <td><%= challenge.description_2 %></td>
        <td><%= challenge.description_3 %></td>
        <td><%= challenge.description_4 %></td>
        <td><%= challenge.comment %></td>
        <td><%= challenge.category %></td>
        <td><%= challenge.param_0 %></td>
        <td><%= challenge.param_1 %></td>
        <td><%= challenge.param_2 %></td>
        <td><%= challenge.image %></td>
        <td><%= link_to 'Show', challenge %></td>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

